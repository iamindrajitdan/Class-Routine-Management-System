# Environment Configuration for Class Routine Management System (Java)

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# API Configuration
API_PORT=8080

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=crms_user
DB_PASSWORD=crms_password
DB_NAME=crms_db
DB_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=INFO
SHOW_SQL=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT=100

# Optimization
OPTIMIZATION_TIMEOUT=300
MAX_ALTERNATIVES=5
